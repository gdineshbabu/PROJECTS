//Let us rock and roll
import java.util.Scanner;
class Attendance
{
    private String id;
    private String name;
    private String classr;
    private String collegeid;
    private String  college;
    private String  attendance;
    
    Scanner sc=new Scanner(System.in);
    //METHOD TO FACULTY
     void  facultydetails()
    {
        System.out.println("-------********  FACULTY ATTENDENCE MANAGEMENT SYSTEM  ********------");
        System.out.println("       Enter faculty id numberüëç          :         ");
        id=sc.nextLine();
        System.out.println("       Enter Name of the facultyüòé:       ");
        name=sc.nextLine();
      
        System.out.println("       Enter name of the college üòä:      ");
        college=sc.nextLine();
        System.out.println("       Enter  college id üëç:       ");
        collegeid=sc.nextLine();
        System.out.println("       Enter  either faculty is present/absentüëç:       ");
        attendance=sc.nextLine();
        
    }
    //METHOD TO STUDENT
    void  studentdetails()
    {
        System.out.println("-------********  STUDENT ATTENDENCE MANAGEMENT SYSTEM  ********------");
        System.out.println("       Enter student id numberüëç          :         ");
        id=sc.nextLine();
        System.out.println("       Enter Name of the studentüòäüòé:       ");
        name=sc.nextLine();
        System.out.println("       Enter class of the studentüëå :       ");
        classr=sc.nextLine();
        System.out.println("       Enter name of the college üòç :     ");
        college=sc.nextLine();
        System.out.println("       Enter  either student is present/absentüëç :       ");
        attendance=sc.nextLine();
        
    }
    
     //METHOD TO DISPLAY THE FACULTY DETAILS
    void details()
    {
        System.out.println("------DETAILS OF THE FACULTYüòä------- ");
        System.out.println("       ");
        System.out.println("      FACULTY ID               :  "+id);
        System.out.println("      FACULTY NAME             :  "+name);
        System.out.println("      FACULTY COLLEGE NAME     :  "+college);
        System.out.println("      FACULTY COLLEGE ID       :  "+collegeid);
        System.out.println("      FACULTY STATUS           :  "+attendance);
        
        System.out.println(" ");
    }
    //METHOD TO DISPLAY THE STUDENT DETAILS
    void detail()
    {
        System.out.println("------DETAILS OF THE STUDENTüòä------- ");
        System.out.println("       ");
        System.out.println("      STUDENT ID      :  "+id);
        System.out.println("      STUDENT NAME    :  "+name);
        System.out.println("      STUDENT CLASS   :  "+classr);
        System.out.println("      COLLEGE NAME    :  "+college);
        System.out.println("      STUDENT STATUS  :  "+attendance);
        System.out.println(" ");
    }
    
}
    
//MAIN METHOD
public class Project3
{
    public static void main(String args[])
    {
        
        Scanner sc1=new Scanner(System.in);
    
        System.out.println( "               ‚ù§Ô∏è‚Äç---ATTENDANCE MANAGEMENT SYSTEM-------‚ù§Ô∏è‚Äç    "   );
