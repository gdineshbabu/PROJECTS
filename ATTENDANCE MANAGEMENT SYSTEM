          System.out.println("   MAIN MENU:        \n 1.FACULTY DETAILS üëç         \n 2.STUDENT DETAILS üòç           \n 3.FINEüëç\n 4.EXIT"    );
          System.out.println(" ");
          System.out.println(" ");
          
