        switch(n)
        {
           
        
              case 1:
                 
            
                  for(i=0;i<c;i++)
                  {
                    if(c==1)
                     {
                    m[i].details();
                     }
                     else
                     {
                         System.out.println(" "); 
                         System.out.println("       NO FACULTY IS ENROLLEDüòíüòí   ");
                          System.out.println(" "); 
                          
                     }
                   break;
                  }
                  System.out.println("   come to the college every day make the students happy and knowlegable "); 
                  break;
                 
                  
            case 2:
                 
               
                 for(i=0;i<c;i++)
                  {
                     if(c==2)
                     {
                       m[i].detail();
                      }
                  
                   else
                     {
                       System.out.println(" ");    
                       System.out.println("    NO STUDENT IS ENROLLEDüòíüòí   ");
                       System.out.println(" "); 
                      
                     }
                    break;
                  }
                   System.out.println("   IF YOU HAVE LESS THAN 75% ATTENDENCE YOU NEED TO PAY FINE ");
                       System.out.println("   press 3 to see the fine ");
                 break;
            case 3:
                   System.out.println("--->>   IF YOU HAVE LESS THAN 75% ATTENDENCE YOU NEED TO PAY FINE OF 2000 Rupeesü•µ");
