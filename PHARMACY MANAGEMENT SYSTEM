//Let us rock and roll
import java.util.Scanner;
class Management
{
    private String id;
    private String name;
    private int age;
    private String  disease;
    Scanner sc=new Scanner(System.in);
    //To create membership
    void details()
    {
        System.out.println("-------********PATIENT DETAILS********------");
        System.out.println("       Enter id numberüëç          :         ");
